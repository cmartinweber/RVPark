@page
@model RVPark.Pages.Customer.Profile.UpsertModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container my-4">
    <h2 class="mb-4">My Profile</h2>
    <form method="post">
        <div class="card mb-4">
            <div class="card-header">Account Info</div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Change Password</label><br />
                    <a class="btn btn-outline-primary" asp-page="/Identity/Account/Manage/ChangePassword">Change Password</a>
                </div>
                <div class="mb-3">
                    <label class="form-label">Change Email</label><br />
                    <a class="btn btn-outline-secondary" asp-page="/Identity/Account/Manage/Email">Change Email</a>
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">RV Info</div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">Make</label>
                    <input asp-for="RV.Make" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Model</label>
                    <input asp-for="RV.Model" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">License Plate</label>
                    <input asp-for="RV.LicensePlate" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Length (ft)</label>
                    <input asp-for="RV.Length" class="form-control" type="number" />
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-success">Save Changes</button>
    </form>
</div>
