@page "{id:int}"
@model ScheduleModel
@{
    var today = DateTime.Today.ToString("yyyy-MM-dd");
    var tomorrow = DateTime.Today.AddDays(1).ToString("yyyy-MM-dd");

    var lotType = Model.selectedLot.LotType;
    var lotName = lotType?.Name ?? "Name unavailable";
    var lotRate = lotType?.Rate.ToString("C") ?? "Rate unavailable";
    var lotRateValue = lotType?.Rate ?? 0;

    var allowedLengths = new List<int> { 20, 25, 30, 35, 40 };
    var maxAllowed = Model.selectedLot.Length ;
    var availableLengths = allowedLengths.Where(l => l <= maxAllowed);
}
<form method="post" enctype="multipart/form-data">
    <div class="container mt-4 d-flex justify-content-center">
        <div class="card shadow-sm w-50">
            <div class="card-body p-4 text-center">

                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <h2 class="text-primary mb-3">
                   Create Reservation
                </h2>
                <hr />

                <div class="row justify-content-center">
                    <div class="col-md-8">

                        <h4 class="fw-bold">Lot Information</h4>

                        <div class="mb-3">
                            <label asp-for="guestFirstName" class="form-label fw-bold">Lot Name</label>
                            <label asp-for="guestFirstName" class="form-control text-center"> @lotName</label>
                        </div>

                        <div class="mb-3">
                            <label asp-for="guestFirstName" class="form-label fw-bold">Lot Rate</label>
                            <label asp-for="guestFirstName" class="form-control text-center"> @lotRate</label>
                        </div>


                        <h4 class="fw-bold">Your Information</h4>

                        <div class="mb-3">
                            <label asp-for="guestFirstName" class="form-label fw-bold">First Name</label>
                            <input asp-for="guestFirstName" class="form-control text-center" />
                            <span class="text-danger" asp-validation-for="guestFirstName"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="guestLastName" class="form-label fw-bold">Last Name</label>
                            <input asp-for="guestLastName" class="form-control text-center" />
                            <span class="text-danger" asp-validation-for="guestLastName"></span>
                        </div>

                        <h4 class="fw-bold">Trailer Information</h4>

                        <div class="mb-3">
                            <label asp-for="length" class="form-label fw-bold">Trailer Length</label>
                            <select asp-for="length" class="form-control text-center">
                                <option value="">-- Select Length --</option>
                                @foreach (var length in availableLengths)
                                {
                                    <option value="@length">@length ft</option>
                                }
                            </select>
                            <span class="text-danger" asp-validation-for="length"></span>
                        </div>

                        <section aria-labelledby="reservation-dates" class="mb-4">
                            <h4 class="fw-bold">Reservation Dates</h4>

                            <div class="mb-3">
                                <label asp-for="startDate" class="form-label">Start Date</label>
                                <input asp-for="startDate" type="date" class="form-control text-center" required onchange="calculateDuration()" />
                                <span asp-validation-for="startDate" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="endDate" class="form-label">End Date</label>
                                <input asp-for="endDate" type="date" class="form-control text-center" required onchange="calculateDuration()" />
                                <span asp-validation-for="endDate" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="duration" class="form-label">Duration (Days)</label>
                                <input asp-for="duration" class="form-control text-center" readonly  />
                                <span asp-validation-for="duration" class="text-danger"></span>
                            </div>
                        </section>

                        <h4 class="fw-bold">Additional Information</h4>

                        <div class="mb-3">
                            <label asp-for="numberOfAdults" class="form-label fw-bold">Number of Adults</label>
                            <input asp-for="numberOfAdults" type="number" min="1" class="form-control text-center" />
                            <span asp-validation-for="numberOfAdults" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="numberOfPets" class="form-label fw-bold">Number of Pets</label>
                            <input asp-for="numberOfPets" type="number" min="0" class="form-control text-center" />
                            <span asp-validation-for="numberOfPets" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="specialRequests" class="form-label fw-bold">Special Requests</label>
                            <textarea asp-for="specialRequests" class="form-control" rows="3" placeholder="Let us know anything important..."></textarea>
                            <span asp-validation-for="specialRequests" class="text-danger"></span>
                        </div>


                    </div>
                </div>


                <div class="d-flex justify-content-center gap-3 mt-4">
                    <a asp-page="Payment" class="btn btn-success">
                        <i class="fas fa-credit-card"></i> Proceed to Payment
                    </a>
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back To List
                    </a>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function calculateDuration() {
            const start = new Date(document.querySelector('[name="Reservation.StartDate"]').value);
            const end = new Date(document.querySelector('[name="Reservation.EndDate"]').value);
            const durationInput = document.querySelector('[name="Reservation.Duration"]');

            if (!isNaN(start) && !isNaN(end)) {
                const diff = Math.ceil((end - start) / (1000 * 60 * 60 * 24));
                durationInput.value = diff > 0 ? diff : 0;
            } else {
                durationInput.value = '';
            }
        }
    </script>
}
