@page "{id:int}"
@model RVPark.Pages.Customer.Home.DetailsModel

@{
    ViewData["Title"] = "Campsite Details";
}

<div class="container mt-5">
    <div class="row align-items-center">

        <div class="col-md-5 mb-4 mb-md-0">
            <div class="image-container">
                <img src="@Model.SelectedLot.Image" class="img-fluid rounded shadow-sm" alt="Lot Image" />
            </div>
        </div>

        <div class="col-md-7">
            <h1 class="display-4 text-primary font-weight-bold mb-3">Lot Information</h1>

            <h4 class="card-title text-primary mb-2">
                <strong>@(Model.SelectedLot.LotType?.Name ?? "Name unavailable")</strong>
            </h4>

            <div class="mb-4">
                <p class="lead text-muted">
                    <strong>Location:</strong> @Model.SelectedLot.Location
                </p>
                <p class="text-danger fs-5 fw-bold">
                    @(Model.SelectedLot.LotType != null ? $"{Model.SelectedLot.LotType.Rate:C}/night" : "Rate unavailable")
                </p>
            </div>

            <div class="mb-4">
                <ul class="nav nav-tabs" id="lotDetailsTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active" id="overview-tab" data-bs-toggle="tab" href="#overview" role="tab">Lot Size</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" id="location-tab" data-bs-toggle="tab" href="#location" role="tab">Description</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" id="contact-tab" data-bs-toggle="tab" href="#contact" role="tab">Contact</a>
                    </li>
                </ul>

                <div class="tab-content" id="lotDetailsTabsContent">
                    <div class="tab-pane fade show active m-3" id="overview" role="tabpanel">
                        <p><strong>Length:</strong> @Model.SelectedLot.Length ft</p>
                        <p><strong>Width:</strong> @Model.SelectedLot.Width ft</p>
                    </div>
                    <div class="tab-pane fade m-3" id="location" role="tabpanel">
                        <p>@Model.SelectedLot.Description</p>
                    </div>
                    <div class="tab-pane fade m-3" id="contact" role="tabpanel">
                        <p><strong>For more information call us at:</strong> (702)652-8711</p>
                        <p><strong>Office Hours</strong></p>
                        <p>Mon–Sat: 9AM–4PM</p>
                        <p>Sun: Closed</p>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-3 mt-4">
                <a asp-page="Schedule" asp-route-id="@Model.SelectedLot.Id" class="btn btn-primary btn-lg shadow">
                    <i class="fas fa-calendar-check me-2"></i> Schedule Visit
                </a>
                <a asp-page="Index" class="btn btn-outline-secondary btn-lg shadow">
                    <i class="fas fa-arrow-left me-2"></i> Back to Campsites
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .image-container {
        height: 300px;
        overflow: hidden;
        border-radius: 8px;
    }

        .image-container img {
            height: 100%;
            width: 100%;
            object-fit: cover;
        }
</style>
