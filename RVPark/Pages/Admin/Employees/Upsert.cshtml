@page
@model RVPark.Pages.Admin.Employees.UpsertModel

@{
    ViewData["Title"] = Model.EmployeeVM.EmployeeId == 0 ? "Add Employee" : "Update Employee";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="EmployeeVM.EmployeeId" />
                <input type="hidden" asp-for="EmployeeVM.UserId" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="EmployeeVM.FirstName" class="form-label fw-bold">First Name</label>
                        <input asp-for="EmployeeVM.FirstName" class="form-control" />
                        <span asp-validation-for="EmployeeVM.FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="EmployeeVM.LastName" class="form-label fw-bold">Last Name</label>
                        <input asp-for="EmployeeVM.LastName" class="form-control" />
                        <span asp-validation-for="EmployeeVM.LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="EmployeeVM.Email" class="form-label fw-bold">Email</label>
                        <input asp-for="EmployeeVM.Email" class="form-control" />
                        <span asp-validation-for="EmployeeVM.Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="EmployeeVM.Phone" class="form-label fw-bold">Phone</label>
                        <input asp-for="EmployeeVM.Phone" class="form-control" />
                        <span asp-validation-for="EmployeeVM.Phone" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <label asp-for="EmployeeVM.Role" class="form-label fw-bold">Role</label>
                        <select asp-for="EmployeeVM.Role" class="form-select">
                            @foreach (var role in Model.AvailableRoles)
                            {
                                <option value="@role">@role</option>
                            }
                        </select>
                        <span asp-validation-for="EmployeeVM.Role" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-page="./Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
