@page
@model RVPark.Pages.Admin.Guests.UpsertModel

@{
    ViewData["Title"] = Model.GuestVM.GuestId == 0 ? "Add Guest" : "Update Guest";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="GuestVM.GuestId" />
                <input type="hidden" asp-for="GuestVM.UserId" />
                <input type="hidden" asp-for="ReturnUrl" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="GuestVM.FirstName" class="form-label fw-bold">First Name</label>
                        <input asp-for="GuestVM.FirstName" class="form-control" />
                        <span asp-validation-for="GuestVM.FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="GuestVM.LastName" class="form-label fw-bold">Last Name</label>
                        <input asp-for="GuestVM.LastName" class="form-control" />
                        <span asp-validation-for="GuestVM.LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="GuestVM.Email" class="form-label fw-bold">Email</label>
                        <input asp-for="GuestVM.Email" class="form-control" />
                        <span asp-validation-for="GuestVM.Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="GuestVM.Phone" class="form-label fw-bold">Phone</label>
                        <input asp-for="GuestVM.Phone" class="form-control" />
                        <span asp-validation-for="GuestVM.Phone" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="GuestVM.DodId" class="form-label fw-bold">DoD ID</label>
                        <input asp-for="GuestVM.DodId" class="form-control" />
                        <span asp-validation-for="GuestVM.DodId" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="GuestVM.DodBranch" class="form-label fw-bold">Branch</label>
                        <select asp-for="GuestVM.DodBranch" class="form-select">
                            <option value="">Select a Branch</option>
                            <option>Army</option>
                            <option>Navy</option>
                            <option>Air Force</option>
                            <option>Marine Corps</option>
                            <option>Coast Guard</option>
                            <option>Space Force</option>
                        </select>
                        <span asp-validation-for="GuestVM.DodBranch" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="GuestVM.DodRank" class="form-label fw-bold">Rank</label>
                        <select asp-for="GuestVM.DodRank" class="form-select">
                            <option value="">Select a Rank</option>
                            @foreach (var rank in new[] {
                            "E-1","E-2","E-3","E-4","E-5","E-6","E-7","E-8","E-9",
                            "O-1","O-2","O-3","O-4","O-5","O-6","O-7","O-8","O-9","O-10",
                            "W-1","W-2","W-3","W-4","W-5"
                            })
                            {
                                <option value="@rank">@rank</option>
                            }
                        </select>
                        <span asp-validation-for="GuestVM.DodRank" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="GuestVM.DodStatus" class="form-label fw-bold">Status</label>
                        <select asp-for="GuestVM.DodStatus" class="form-select">
                            <option value="">Select Status</option>
                            <option>Active Duty</option>
                            <option>Reserves</option>
                            <option>National Guard</option>
                            <option>Retired</option>
                        </select>
                        <span asp-validation-for="GuestVM.DodStatus" class="text-danger"></span>
                    </div>
                </div>

                <h5 class="mt-4 border-top pt-3 text-primary">RV Details</h5>

                <div class="mb-3">
                    <label asp-for="Rv.Make" class="form-label fw-bold">Make</label>
                    <input asp-for="Rv.Make" class="form-control" />
                    <span asp-validation-for="Rv.Make" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Rv.Model" class="form-label fw-bold">Model</label>
                    <input asp-for="Rv.Model" class="form-control" />
                    <span asp-validation-for="Rv.Model" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Rv.LicensePlate" class="form-label fw-bold">License Plate</label>
                    <input asp-for="Rv.LicensePlate" class="form-control" />
                    <span asp-validation-for="Rv.LicensePlate" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Rv.Length" class="form-label fw-bold">Length (ft)</label>
                    <input asp-for="Rv.Length" class="form-control" />
                    <span asp-validation-for="Rv.Length" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Rv.Description" class="form-label fw-bold">Description</label>
                    <textarea asp-for="Rv.Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Rv.Description" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-page="./Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save Guest
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
