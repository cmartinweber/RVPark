@page
@using Infrastructure.Utilities;
@inject UserManager<IdentityUser> UserManager
@model RVPark.Pages.Admin.Guests.IndexModel
@{
    ViewData["Title"] = "Guests";
}

<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center py-3">
                <h2 class="text-custom-blue-header mb-0">Guest List</h2>
                <a asp-page="Upsert" class="btn btn-custom-blue-header">
                    <i class="fas fa-plus"></i> Add New Guest
                </a>
            </div>

            <div class="table-responsive">
                <table id="DT_load" class="table table-striped table-hover table-bordered align-middle w-100">
                    <thead class="table-primary">
                        <tr>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>DOD ID</th>
                            <th>Branch</th>
                            <th>Status</th>
                            <th>Rank</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/guests.js" asp-append-version="true"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/2.2.2/js/dataTables.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="https://kit.fontawesome.com/4ce08efd14.js" crossorigin="anonymous"></script>
}
