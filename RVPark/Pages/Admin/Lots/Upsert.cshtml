@page
@model RVPark.Pages.Admin.Reservations.UpsertModel

<form method="post" enctype="multipart/form-data">
    <div class="container d-flex justify-content-center mt-4">
        <div class="card shadow-sm w-75">
            <div class="card-body p-4">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <h2 class="text-primary text-center">
                    @(Model.Reservation.ReservationId != 0 ? "Update" : "Create") Reservation
                </h2>
                <hr />

                <div class="row">
                    <div class="col-md-6">
                        <h5 class="fw-bold">Guest Information</h5>
                        <div class="mb-3">
                            <label asp-for="GuestFirstName" class="form-label">First Name</label>
                            <input asp-for="GuestFirstName" class="form-control" />
                            <span asp-validation-for="GuestFirstName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="GuestLastName" class="form-label">Last Name</label>
                            <input asp-for="GuestLastName" class="form-control" />
                            <span asp-validation-for="GuestLastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h5 class="fw-bold">Trailer & Lot Information</h5>
                        <div class="mb-3">
                            <label asp-for="Length" class="form-label">Trailer Length (ft)</label>
                            <input asp-for="Length" type="number" step="0.1" class="form-control" />
                            <span asp-validation-for="Length" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Reservation.LotId" class="form-label">Lot</label>
                            <select asp-for="Reservation.LotId" asp-items="Model.AvailableLots" class="form-control">
                                <option value="">-- Select Lot --</option>
                            </select>
                            <span asp-validation-for="Reservation.LotId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <h5 class="fw-bold">Reservation Dates & Status</h5>
                        <div class="mb-3">
                            <label asp-for="Reservation.StartDate" class="form-label">Start Date</label>
                            <input asp-for="Reservation.StartDate" type="date" class="form-control" onchange="calculateDuration()" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Reservation.EndDate" class="form-label">End Date</label>
                            <input asp-for="Reservation.EndDate" type="date" class="form-control" onchange="calculateDuration()" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Reservation.Duration" class="form-label">Duration (Days)</label>
                            <input asp-for="Reservation.Duration" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Reservation.Status" class="form-label">Status</label>
                            <select asp-for="Reservation.Status" class="form-control" asp-items="@(new SelectList(Model.StatusOptions))">
                                <option value="">-- Select Status --</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> @(Model.Reservation.ReservationId != 0 ? "Update" : "Create")
                    </button>
                    <a asp-page="./Index" class="btn btn-secondary ms-2">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        function calculateDuration() {
            const start = new Date($("#Reservation_StartDate").val());
            const end = new Date($("#Reservation_EndDate").val());
            if (start && end && end > start) {
                const duration = (end - start) / (1000 * 3600 * 24);
                $("#Reservation_Duration").val(duration);
            }
        }

        $(document).ready(function() {
            calculateDuration();
        });
    </script>
}

    </script>
    <script src="~/js/reservation.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/tinymce/js/tinymce/tinymce.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="https://cdn.datatables.net/2.2.2/js/dataTables.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="https://kit.fontawesome.com/4ce08efd14.js" crossorigin="anonymous"></script>
}
