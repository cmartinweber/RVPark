@page
@model RVPark.Pages.Admin.Fees.IndexModel
@{
    ViewData["Title"] = "Fees";
}

<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-body">

            <div class="d-flex justify-content-between align-items-center py-3">
                <h2 class="text-primary mb-0">Fee List</h2>
                <a asp-page="Upsert" asp-route-id="0" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add New Fee
                </a>
            </div>

            <div class="table-responsive">
                <table id="DT_load" class="table table-striped table-hover table-bordered align-middle w-100">
                    <thead class="table-primary">
                        <tr>
                            <th>ID</th>
                            <th>Fee Type</th>
                            <th>Triggering Policy</th>
                            <th>Amount</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                </table>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/fees.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/2.2.2/js/dataTables.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="https://kit.fontawesome.com/4ce08efd14.js" crossorigin="anonymous"></script>
}
