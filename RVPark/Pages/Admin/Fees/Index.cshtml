@page
@model RVPark.Pages.Admin.Fees.IndexModel
@{
    ViewData["Title"] = "Fees";
}
<div class="container p-3">
    <div class="row">
        <div class="col-6 p-4">
            <h2 class="text-primary">Fee List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Upsert" asp-route-id="0" class="btn btn-primary">
                <i class="fas fa-plus p-10"></i>&nbsp; Add New Fee
            </a>
        </div>
    </div>
</div>
<table id="DT_load" class="table table-striped table-bordered margin p-4" style="width:90%">
    <thead>
        <tr>
            <th>Id</th>
            <th>Fee Type</th>
            <th>Triggering Policy</th>
            <th>Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
</table>
@section Scripts {
    <script src="~/js/fees.js"></script>
}
