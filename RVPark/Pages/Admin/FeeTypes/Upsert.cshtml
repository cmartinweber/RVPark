@page
@model RVPark.Pages.Admin.FeeTypes.UpsertModel
@{
    ViewData["Title"] = Model.FeeTypeObject.Id != 0 ? "Update Fee Type" : "Create Fee Type";
}

<form method="post">
    <div class="container">
        <div class="row px-2 mx-2 border">
            <div class="col-12 px-3 py-3 border-bottom border-custom-blue">
                <h2 class="text-custom-blue-header">@ViewData["Title"]</h2>
            </div>

            <div class="col-8 pt-3">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="FeeTypeObject.Id" />

                <div class="form-group row mb-3">
                    <div class="col-3">
                        <label asp-for="FeeTypeObject.FeeTypeName" class="form-label"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="FeeTypeObject.FeeTypeName" class="form-control" />
                        <span asp-validation-for="FeeTypeObject.FeeTypeName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <div class="col-3">
                        <label asp-for="FeeTypeObject.TriggerType" class="form-label"></label>
                    </div>
                    <div class="col-9">
                        <select asp-for="FeeTypeObject.TriggerType" class="form-select">
                            <option value="">-- Select Trigger Type --</option>
                            <option value="Reservation">Reservation</option>
                            <option value="Manual">Manual</option>
                        </select>
                        <span asp-validation-for="FeeTypeObject.TriggerType" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <div class="col-3">
                        <label asp-for="FeeTypeObject.TriggerRuleJson" class="form-label"></label>
                    </div>
                    <div class="col-9">
                        <textarea asp-for="FeeTypeObject.TriggerRuleJson" class="form-control" rows="3"
                                  placeholder="Optional: JSON rules for triggering (e.g. cancellation window)"></textarea>
                        <span asp-validation-for="FeeTypeObject.TriggerRuleJson" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row pt-3">
                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6">
                                <button type="submit" class="btn btn-primary w-100">
                                    @(Model.FeeTypeObject.Id != 0 ? "Update" : "Create")
                                </button>
                            </div>
                            <div class="col-6">
                                <a asp-page="./Index" class="btn btn-secondary w-100">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/2.2.2/js/dataTables.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/4ce08efd14.js" crossorigin="anonymous"></script>
}
