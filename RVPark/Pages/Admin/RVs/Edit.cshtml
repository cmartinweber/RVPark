@page "{id:int}"
@model RVPark.Pages.Admin.RVs.EditModel
@{
    ViewData["Title"] = "Edit RV";
}

<form method="post">
    <input type="hidden" asp-for="Rv.RvId" />
    <input type="hidden" asp-for="ReturnUrl" />

    <div class="container mt-4 d-flex justify-content-center">
        <div class="card shadow-sm w-100" style="max-width: 600px;">
            <div class="card-body px-4 py-4">
                <div asp-validation-summary="All" class="text-danger small mb-3"></div>
                <h2 class="text-primary text-center mb-4">Edit RV</h2>

                <div class="mb-3">
                    <label asp-for="Rv.Make" class="form-label fw-bold"></label>
                    <input asp-for="Rv.Make" class="form-control text-center" />
                    <span asp-validation-for="Rv.Make" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Rv.Model" class="form-label fw-bold"></label>
                    <input asp-for="Rv.Model" class="form-control text-center" />
                    <span asp-validation-for="Rv.Model" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Rv.LicensePlate" class="form-label fw-bold"></label>
                    <input asp-for="Rv.LicensePlate" class="form-control text-center" />
                    <span asp-validation-for="Rv.LicensePlate" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Rv.Length" class="form-label fw-bold"></label>
                    <input asp-for="Rv.Length" class="form-control text-center" />
                    <span asp-validation-for="Rv.Length" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Rv.Description" class="form-label fw-bold"></label>
                    <textarea asp-for="Rv.Description" class="form-control text-center" rows="3"></textarea>
                    <span asp-validation-for="Rv.Description" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-custom-blue w-50">
                        <i class="fas fa-save"></i> Save
                    </button>
                    <a class="btn btn-custom-grey w-50" href="@Model.ReturnUrl ?? Url.Page(" /Admin/RVs/Index")">
                        <i class="fas fa-arrow-left"></i> Cancel
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <script>
            toastr.success("@Model.StatusMessage");
        </script>
    }
}
