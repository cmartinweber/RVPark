@page "{id:int}"
@model RVPark.Pages.Admin.RVs.EditModel
@{
    ViewData["Title"] = "Edit RV";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="Rv.RvId" />
                <input type="hidden" asp-for="ReturnUrl" />

                <div class="mb-3">
                    <label asp-for="Rv.Make" class="form-label fw-bold">Make</label>
                    <input asp-for="Rv.Make" class="form-control text-center" />
                    <span asp-validation-for="Rv.Make" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Rv.Model" class="form-label fw-bold">Model</label>
                    <input asp-for="Rv.Model" class="form-control text-center" />
                    <span asp-validation-for="Rv.Model" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Rv.LicensePlate" class="form-label fw-bold">License Plate</label>
                    <input asp-for="Rv.LicensePlate" class="form-control text-center" />
                    <span asp-validation-for="Rv.LicensePlate" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Rv.Length" class="form-label fw-bold">Length (ft)</label>
                    <input asp-for="Rv.Length" class="form-control text-center" />
                    <span asp-validation-for="Rv.Length" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Rv.Description" class="form-label fw-bold">Description</label>
                    <textarea asp-for="Rv.Description" class="form-control text-center" rows="3"></textarea>
                    <span asp-validation-for="Rv.Description" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="@(Model.ReturnUrl ?? Url.Page("/Admin/Reservations/Upsert"))" class="btn btn-custom-grey">
                        <i class="fas fa-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-custom-blue">
                        <i class="fas fa-save"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
