@page "{id:int}"
@model RVPark.Pages.Admin.Reservations.UpdateModel
@{
    ViewData["Title"] = "Update Reservation";
}

<form method="post">
    <div class="container mt-4 d-flex justify-content-center">
        <div class="card shadow-sm w-50">
            <div class="card-body p-4 text-center">

                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <h2 class="text-primary mb-3">Update Reservation</h2>
                <hr />

                @if (Model.Reservation != null)
                {
                    <div class="row justify-content-center">
                        <div class="col-md-10">

                            <h5 class="fw-bold">Guest Name</h5>
                            <p>@Model.Reservation.Guest.User.FirstName @Model.Reservation.Guest.User.LastName</p>

                            <h5 class="fw-bold">Trailer Length</h5>
                            <p>@Model.Reservation.Rv.Length ft</p>

                            <div class="mb-3">
                                <label asp-for="Reservation.StartDate" class="form-label fw-bold">Start Date</label>
                                <input asp-for="Reservation.StartDate" type="date" class="form-control text-center" onchange="updateLots()" />
                                <span asp-validation-for="Reservation.StartDate" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Reservation.EndDate" class="form-label fw-bold">End Date</label>
                                <input asp-for="Reservation.EndDate" type="date" class="form-control text-center" onchange="updateLots()" />
                                <span asp-validation-for="Reservation.EndDate" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Reservation.Duration" class="form-label fw-bold">Duration</label>
                                <input asp-for="Reservation.Duration" class="form-control text-center" readonly />
                            </div>

                            <div class="mb-3">
                                <label asp-for="Reservation.LotId" class="form-label fw-bold">Lot</label>
                                <select asp-for="Reservation.LotId" asp-items="Model.AvailableLots" class="form-control text-center"></select>
                                <span asp-validation-for="Reservation.LotId" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Updated Total ($)</label>
                                <input class="form-control text-center" value="@Model.UpdatedTotal.ToString("F2")" readonly />
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Balance Difference ($)</label>
                                <input class="form-control text-center @(Model.BalanceDifference > 0 ? "text-danger" : "text-success")"
                                       value="@Model.BalanceDifference.ToString("+0.00;-0.00")" readonly />
                            </div>

                            <input type="hidden" asp-for="Reservation.ReservationId" />
                            <input type="hidden" asp-for="Reservation.GuestId" />
                            <input type="hidden" asp-for="Reservation.RvId" />

                        </div>
                    </div>

                    <div class="d-flex justify-content-center gap-3 mt-4">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Save Changes
                        </button>
                        <button type="submit" asp-page-handler="Cancel" class="btn btn-danger">
                            <i class="fas fa-times-circle"></i> Cancel Reservation
                        </button>
                        <a asp-page="/Admin/Reservations/Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning mt-3">
                        Reservation not found.
                    </div>
                }

            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function updateLots() {
            const start = document.querySelector('[name="Reservation.StartDate"]').value;
            const end = document.querySelector('[name="Reservation.EndDate"]').value;

            const startDate = new Date(start);
            const endDate = new Date(end);
            const durationInput = document.querySelector('[name="Reservation.Duration"]');

            if (start && end && endDate > startDate) {
                const diff = Math.floor((endDate - startDate) / (1000 * 60 * 60 * 24));
                durationInput.value = diff;
            } else {
                durationInput.value = '';
            }

 
        }
    </script>
}
