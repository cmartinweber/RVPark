@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>

    <!-- Banner -->
    <div class="container-fluid p-0">
        <img src="/Images/Banner.jpg" alt="Banner Temp" class="w-100" style="height: 45vh; object-fit: cover;">
    </div>

    <!-- Info Section -->
    <div class="container-fluid text-center">
        <div class="row g-0">
            <div class="col-12 col-md-3 d-flex flex-column align-items-center justify-content-center py-3">
                <i class="fas fa-calendar-alt" style="font-size: 2rem;"></i>
                <h6 class="mt-2 mb-1">Schedule</h6>
                <ul class="list-unstyled small m-0">
                    <li>Mon-Fri: 9AM - 9:01AM</li>
                    <li>Sat:  Closed</li>
                    <li>Sun: Closed</li>
                </ul>
            </div>

            <div class="col-12 col-md-3 d-flex flex-column align-items-center justify-content-center py-3">
                <i class="fas fa-phone" style="font-size: 2rem;"></i>
                <h6 class="mt-2 mb-1">Contact Us</h6>
                <p class="small m-0">+1 (???) 867-5309</p>
            </div>

            <div class="col-12 col-md-3 d-flex flex-column align-items-center justify-content-center py-3">
                <i class="fas fa-map-marker-alt" style="font-size: 2rem;"></i>
                <h6 class="mt-2 mb-1">Our Location</h6>
                <p class="small m-0">Street, City, ST 56789</p>
            </div>

            <div class="col-12 col-md-3 d-flex flex-column align-items-center justify-content-center py-3">
                <i class="fab fa-facebook" style="font-size: 2rem;"></i>
                <h6 class="mt-2 mb-1">Facebook</h6>
                <p class="small m-0">Follow Us</p>
            </div>
        </div>
    </div>

    <!-- Image Section -->
    <div class="container-fluid py-3">
        <div class="row g-0">
            <div class="col-12 col-md-4 p-2">
                <img src="/Images/HomePhotoOne.jpg" alt="Temp" class="img-fluid w-100" style="height: 40vh; object-fit: cover;">
            </div>
            <div class="col-12 col-md-4 p-2">
                <img src="/Images/HomePhotoThree.jpg" alt="Temp" class="img-fluid w-100" style="height: 40vh; object-fit: cover;">
            </div>
            <div class="col-12 col-md-4 p-2">
                <img src="/Images/HomePhotoTwo.jpg" alt="Temp" class="img-fluid w-100" style="height: 40vh; object-fit: cover;">
            </div>
        </div>
    </div>

    <!-- Info part 2 Section -->

    <div class="container-fluid d-flex justify-content-center align-items-center text-bg-primary py-4">
        <div class="d-flex w-100 justify-content-between flex-wrap px-3" style="max-width: 1200px;">
            <div class="d-flex flex-column align-items-center justify-content-center bg-white text-center shadow-lg rounded-3 p-4 flex-fill mx-2" style="max-width: 350px;">
                <i class="fa-solid fa-map text-dark" style="font-size: 2.2rem;"></i>
                <h6 class="mt-2 mb-1 text-dark">SiteMap</h6>
            </div>

            <div class="d-flex flex-column align-items-center justify-content-center bg-white text-center shadow-lg rounded-3 p-4 flex-fill mx-2" style="max-width: 350px;">
                <i class="fa-solid fa-scale-balanced text-dark" style="font-size: 2.2rem;"></i>
                <h6 class="mt-2 mb-1 text-dark">Site Guidlines</h6>
            </div>

            <div class="d-flex flex-column align-items-center justify-content-center bg-white text-center shadow-lg rounded-3 p-4 flex-fill mx-2" style="max-width: 350px;">
                <i class="fa-solid fa-caravan text-dark" style="font-size: 2.2rem;"></i>
                <h6 class="mt-2 mb-1 text-dark">RV Long Term Storage</h6>
            </div>
        </div>
    </div>



</body>
</html>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

