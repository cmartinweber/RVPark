@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.css" />
</head>
<body>
    <!-- Carousel Section -->
    <div class="container-fluid px-0">
        <div id="parkCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/Images/Banner.jpg" class="d-block w-100 img-fluid" alt="Slide 1" style="aspect-ratio: 16/9; object-fit: cover;">
                </div>
                <div class="carousel-item">
                    <img src="/Images/Lottype.jpg" class="d-block w-100 img-fluid" alt="Slide 2" style="aspect-ratio: 16/9; object-fit: cover;">
                </div>
                <div class="carousel-item">
                    <img src="/Images/valleyoffire.jpg" class="d-block w-100 img-fluid" alt="Slide 3" style="aspect-ratio: 16/9; object-fit: cover;">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#parkCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#parkCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>

    <!-- Info Block Section -->
    <div class="container-fluid py-4 bg-light">
        <div class="row text-center">
            <div class="col-6 col-md-3 py-3">
                <i class="fas fa-calendar-alt fa-2x"></i>
                <h6 class="mt-2">Schedule</h6>
                <small>Mon–Sat: 9AM–4PM<br />Sun: Closed</small>
            </div>
            <div class="col-6 col-md-3 py-3">
                <i class="fas fa-phone fa-2x"></i>
                <h6 class="mt-2">Contact</h6>
                <small>(702) 652-8711</small>
            </div>
            <div class="col-6 col-md-3 py-3">
                <i class="fas fa-map-marker-alt fa-2x"></i>
                <h6 class="mt-2">Location</h6>
                <small>4907 Duffer Dr, Nellis AFB, NV</small>
            </div>
            <div class="col-6 col-md-3 py-3">
                <a href="https://www.facebook.com/NellisDesertEagleRVPark/" target="_blank">
                    <i class="fab fa-facebook-f fa-2x"></i>
                    <h6 class="mt-2">Facebook</h6>
                    <small>Follow Us</small>
                </a>
            </div>
        </div>
    </div>

    <!-- Image Row Section -->
    <div class="container-fluid px-3 py-4">
        <div class="row g-3">
            <div class="col-12 col-md-4">
                <img src="/Images/HomePhotoOne.jpg" class="img-fluid w-100 rounded shadow" style="aspect-ratio: 16/10; object-fit: cover;" alt="Photo 1">
            </div>
            <div class="col-12 col-md-4">
                <img src="/Images/HomePhotoThree.jpg" class="img-fluid w-100 rounded shadow" style="aspect-ratio: 16/10; object-fit: cover;" alt="Photo 2">
            </div>
            <div class="col-12 col-md-4">
                <img src="/Images/HomePhotoTwo.jpg" class="img-fluid w-100 rounded shadow" style="aspect-ratio: 16/10; object-fit: cover;" alt="Photo 3">
            </div>
        </div>
    </div>

    <!-- Cards Section -->
    <div class="container-fluid py-4" style="background-color: #001f3f;">
        <div class="d-flex flex-wrap justify-content-center gap-3">
            <!-- SiteMap Card -->
            <button class="btn bg-white shadow rounded-3 p-4 text-center" type="button" data-bs-toggle="modal" data-bs-target="#siteMapModal" style="min-width: 200px; max-width: 320px;">
                <i class="fa-solid fa-map fa-2x text-dark"></i>
                <h6 class="mt-2 mb-0 text-dark">Site Map</h6>
            </button>

            <!-- Guidelines Card -->
            <div class="bg-white shadow rounded-3 p-4 text-center" style="min-width: 200px; max-width: 320px;">
                <i class="fa-solid fa-scale-balanced fa-2x text-dark"></i>
                <h6 class="mt-2 mb-0 text-dark">Site Guidelines</h6>
            </div>

            <!-- Storage Card -->
            <div class="bg-white shadow rounded-3 p-4 text-center" style="min-width: 200px; max-width: 320px;">
                <i class="fa-solid fa-caravan fa-2x text-dark"></i>
                <h6 class="mt-2 mb-0 text-dark">RV Long Term Storage</h6>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="siteMapModal" tabindex="-1" aria-labelledby="siteMapModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-fullscreen">
            <div class="modal-content bg-dark">
                <div class="modal-header border-0">
                    <h5 class="modal-title text-white">Park Site Map</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex justify-content-center align-items-center">
                    <img src="/Images/Lot_map.png" class="img-fluid rounded shadow" alt="Site Map" style="max-height: 90vh; object-fit: contain;">
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
