@page
@model IndexModel
@{
    ViewData["Title"] = "My Profile";
}

<h2>@ViewData["Title"]</h2>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="card mt-3">
    <div class="card-body">
        <h4>User Information</h4>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Phone:</strong> @Model.PhoneNumber</p>

        <h4 class="mt-4">RV Information</h4>
        @if (Model.RV != null)
        {
            <p><strong>Make:</strong> @Model.RV.Make</p>
            <p><strong>Model:</strong> @Model.RV.Model</p>
            <p><strong>License Plate:</strong> @Model.RV.LicensePlate</p>
            <p><strong>Length:</strong> @Model.RV.Length ft</p>
        }
        else
        {
            <p>No RV on file.</p>
        }

        <a asp-page="./ProfileEdit" class="btn btn-primary mt-3">Edit Profile</a>
    </div>
</div>
